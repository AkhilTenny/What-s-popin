 <div class="container">
  <div class="mt-5">
   <div class="col-lg-6 mx-auto">
        <h3 class="text-center">Sign In</h3>
        <form role="form" method="post" >
          <div class="form-group">
            <label for="usrname">Username</label>
            <input type="text" class="form-control" name="username" id="username" placeholder="Enter username" style="border-radius:20px;">
          </div>
          <div class="form-group mt-3">
            <label for="emailId">Email ID</label>
            <input type="email" class="form-control" name="emailId" id="emailId" placeholder="Enter email" style="border-radius:20px;">
          </div>
          <div class="form-group mt-3">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password" id="password" placeholder="Enter password" style="border-radius:20px;">
          </div>
          <div class="form-group mt-3">
            <label for="confirm-password">Confirm Password</label>
            <input type="password" class="form-control" name="confirmPassword" id="confirm-password" placeholder="Confirm password" style="border-radius:20px;">
          </div>
          <div class="mt-5 " style="display:flex;justify-content: space-between;" >
            <button type="submit" class="btn btn-primary "  style="border-radius:20px;">Create Account</button>
          </div>
        </form>
      </div>
      </div>
 </div>
